{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build-direct",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/PmergeMe.cpp",
                "-I${workspaceFolder}/incl",
                "-o",
                "${workspaceFolder}/PmergeMe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "clear": true
            }
        }
    ]
}